<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:mvc="http://www.springframework.org/schema/mvc" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc
		http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<!-- =================================================================================== -->
	<!-- **** SUPPORTING LIFE SERVICES													**** -->
	<!-- =================================================================================== -->

	<!-- Validation support (e.g. @Valid) notatation requires a validator bean be added to the 
		 context -->
	<bean id="validator" class="org.springframework.validation.beanvalidation.LocalValidatorFactoryBean" />
	
	<bean id="SupportingLifeServiceBean" class="ie.ucc.bis.service.SupportingLifeService">
		<property name="patientDAO">
		    <ref bean="PatientDaoBean"/>
		</property>
	</bean>
	
	<!-- =================================================================================== -->
	<!-- **** END OF SUPPORTING LIFE SERVICES											**** -->
	<!-- =================================================================================== -->
    		
</beans>